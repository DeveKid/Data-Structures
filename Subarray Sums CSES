#include <bits/stdc++.h>
 
using namespace std;
 
#define F first
#define S second
#define PB push_back
#define MP make_pair
#define REP(i,a,b) for (int i = a; i < b; i++)
#define endl '\n'
 
typedef long long ll;
typedef vector<int> vi;
typedef vector<string> vs;
typedef vector<float> vf;
typedef vector<ll> vll;
typedef map<int, int> mi;
typedef map<ll, ll> mll;
typedef pair<int, int> pi;
typedef set<int> si;
typedef set<ll> sll;
 
void solve() {
    ll n, x;
    cin >> n >> x;
    map<ll, int> prefix;
    ll temp;
    ll ans = 0, s = 0;
    prefix[0]++;
    REP(i, 0, n) {
        cin >> temp;
        s += temp;
        ans += prefix[s-x];
        prefix[s]++;
    }
    cout << ans << endl;
}
 
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    solve();
}
